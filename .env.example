# Claude Code API Configuration

# Port configuration
PORT=8082

# API Key for accessing this service
# Set this to a secure value in production
API_KEY=your-api-key-here

# Logging configuration
# LOG_LEVEL: debug, info, warn, error (default: info)
LOG_LEVEL=info
# LOG_FORMAT: text, json (default: text)
LOG_FORMAT=text
# LOG_TO_FILE: true/false (default: false) - Enable logging to file in logs/ directory
LOG_TO_FILE=true
# LOG_MAX_FILES: number (default: 7) - Maximum number of log files to keep
LOG_MAX_FILES=7

# Fallback API Configuration
# You can configure up to 5 fallback APIs
# All APIs must be OpenAI-compatible

# Fallback API 1 - OpenAI
FALLBACK_API_NAME_1=OpenAI
FALLBACK_API_URL_1=https://api.openai.com/v1
FALLBACK_API_KEY_1=your-openai-api-key-here
FALLBACK_API_MODEL_1=gpt-4-turbo-preview

# Fallback API 2 - Anthropic Claude
FALLBACK_API_NAME_2=Claude
FALLBACK_API_URL_2=https://api.anthropic.com/v1
FALLBACK_API_KEY_2=your-anthropic-api-key-here
FALLBACK_API_MODEL_2=claude-3-opus-20240229
